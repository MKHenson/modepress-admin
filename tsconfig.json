{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "es7"
    ],
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "jsx": "react",
    "experimentalDecorators": true
  },
  "include": [
    "../../src/types/**/*",
    "src/**/*"
  ],
  "exclude": [
    "src/server/**/*"
  ]
}